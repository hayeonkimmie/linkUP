<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="mapper.category">
    <insert id="insertCategory" parameterType="category">
        insert category (category_id,category_name) values (#{category_id}, #{category_name})
    </insert>

    <select id="selectCatroryIdByName" parameterType="String" resultType="int">
        SELECT category_id FROM subCategory WHERE sub_category_name = #{name}
    </select>
    <select id="findSubCategoryIdsByCategoryName" resultType="int">
        SELECT sub_category_id
        FROM subCategory s
                 JOIN category c ON s.category_id = c.category_id
        WHERE c.category_name = #{categoryName}
    </select>
</mapper>
